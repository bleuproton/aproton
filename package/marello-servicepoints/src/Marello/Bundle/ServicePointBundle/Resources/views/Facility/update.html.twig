{% extends 'OroUIBundle:actions:update.html.twig' %}
{% import 'OroDataGridBundle::macros.html.twig' as dataGrid %}
{% form_theme form with 'OroFormBundle:Form:fields.html.twig' %}
{% if form.vars.value.id %}
    {% set formAction = path('marello_servicepoint_facility_update', { 'id': form.vars.value.id }) %}
    {% oro_title_set({params : {"%label%": entity.labels|localized_value }}) %}
{% else %}
    {% set formAction = path('marello_servicepoint_facility_create') %}
{% endif %}

{% block navButtons %}
    {{ parent() }}

    {{ UI.cancelButton(path('marello_servicepoint_facility_index')) }}
    {% if resource_granted('marello_servicepiont_facility_update') %}
        {% set html = '' %}
        {% if resource_granted('marello_servicepoint_facility_view') %}
            {% set html = UI.saveAndCloseButton({
                'route': 'marello_servicepoint_facility_index'
            }) %}
        {% endif %}
        {% set html = html ~ UI.saveAndStayButton({
            'route': 'marello_servicepoint_facility_update',
            'params': {'id': '$id'}
        }) %}

        {{ UI.dropdownSaveButton({'html': html}) }}
    {% endif %}
{% endblock navButtons %}

{% block pageHeader %}
    {% if entity.id %}
        {% set breadcrumbs = {
            'entity':      entity,
            'indexPath':   path('marello_servicepoint_facility_index'),
            'indexLabel': 'marello.servicepoint.facility.entity_plural_label'|trans,
            'entityTitle': entity.labels|localized_value
        } %}
        {{ parent() }}
    {% else %}
        {% set title = 'oro.ui.create_entity'|trans({'%entityName%': 'marello.servicepoint.facility.entity_label'|trans}) %}
        {% include 'OroUIBundle::page_title_block.html.twig' with { title: title } %}
    {% endif %}
{% endblock pageHeader %}

{% block content_data %}
    {% set id = 'marello-paymentterm-update' %}

    {% set dataBlocks = [{
        'title': 'General'|trans,
        'class': 'active',
        'subblocks': [{
            'title': '',
            'data': [
                form_row(form.labels),
                form_row(form.code),
            ]
        }]}
    ] %}

    {% set additionalData = [] %}
    {% for child in form.children if child.vars.extra_field is defined and child.vars.extra_field %}
        {% set additionalData = additionalData|merge([form_row(child)]) %}
    {% endfor %}

    {% if additionalData is not empty %}
        {% set dataBlocks = dataBlocks|merge([{
            'title' : 'marello.servicepoint.ui.facility.sections.additional'|trans,
            'subblocks': [{
                'title' : null,
                'useSpan': false,
                'data' : [
                    additionalData
                ]
            }]
        }]) %}
    {% endif %}

    {% set data = {
        'formErrors': form_errors(form)? form_errors(form) : null,
        'dataBlocks': dataBlocks,
    } %}
    {{ parent() }}
{% endblock content_data %}
