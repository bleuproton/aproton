{% extends 'OroUIBundle:actions:update.html.twig' %}
{% import 'OroUIBundle::macros.html.twig' as UI %}
{% form_theme form with 'OroFormBundle:Form:fields.html.twig' %}

{% oro_title_set({params : {'%entityName%': 'marello.inventory.warehouse.entity_label'|trans} }) %}
{% set entity = form.vars.value %}

{% if entity.id %}
    {% set formAction = path('marelloenterprise_inventory_warehouse_update', { 'id': form.vars.value.id }) %}
{% else %}
    {% set formAction = path('marelloenterprise_inventory_warehouse_create') %}
{% endif %}

{% if entity.id %}
    {% oro_title_set({params : {"%warehouse.label%": entity.label } }) %}
{% endif %}

{% block navButtons %}
    {% if entity.id and not entity.default and is_granted('DELETE', entity) %}
        {{ parent() }}
    {% endif %}
    {{ UI.cancelButton(path('marelloenterprise_inventory_warehouse_index')) }}
    {% if entity.id and is_granted('marelloenterprise_inventory_warehouse_update') or is_granted('marelloenterprise_inventory_warehouse_create') %}
        {% set html = '' %}
        {% if is_granted('marelloenterprise_inventory_warehouse_view') %}
            {% set html = UI.saveAndCloseButton({
            'route': 'marelloenterprise_inventory_warehouse_view',
            'params': {'id': '$id'}
            }) %}
        {% endif %}
        {% set html = html ~ UI.saveAndStayButton({
        'route': 'marelloenterprise_inventory_warehouse_update',
        'params': {'id': '$id'}
        }) %}

        {{ UI.dropdownSaveButton({'html': html}) }}
    {% endif %}
{% endblock navButtons %}

{% block pageHeader %}
    {% if form.vars.value.id %}
        {% set breadcrumbs = {
            'entity':      entity,
            'indexPath':   path('marelloenterprise_inventory_warehouse_index'),
            'indexLabel': 'marello.inventory.warehouse.entity_plural_label'|trans,
            'entityTitle': entity.label
        } %}
        {{ parent() }}
    {% else %}
        {% set title = 'oro.ui.create_entity'|trans({'%entityName%': 'marello.inventory.warehouse.entity_label'|trans}) %}
        {% include 'OroUIBundle::page_title_block.html.twig' with { title: title } %}
    {% endif %}
{% endblock pageHeader %}

{% block content_data %}
    {% set id = 'marello-warehouse-update' %}
    {% set addressField = form_widget(form.address) %}

    {% set dataBlocks = [{
        'title': 'General'|trans,
        'class': 'active',
        'subblocks': [{
            'title': '',
            'data': [
                form_rest(form)
            ]
        }]
    },{
        'title': 'marello.inventory.warehouse.address.label'|trans,
        'class': 'active',
        'subblocks': [{
            'title': '',
            'data': [
                addressField
            ]
        }]
    }]%}

    {% set data = {
        'formErrors': form_errors(form)? form_errors(form) : null,
        'dataBlocks': dataBlocks,
    } %}
    {{ parent() }}
{% endblock content_data %}
