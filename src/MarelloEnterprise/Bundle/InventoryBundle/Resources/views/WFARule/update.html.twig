{% extends 'OroUIBundle:actions:update.html.twig' %}
{% import 'OroUIBundle::macros.html.twig' as UI %}
{% if entity.id %}
    {% oro_title_set({params : {"%wfarule.label%": entity.rule.name|default('N/A'|trans) } }) %}
{% else %}
    {% oro_title_set({params : {'%entityName%': 'marelloenterprise.inventory.wfarule.entity_short_label'|trans} }) %}
{% endif %}

{% set formAction = entity.id ? path('marelloenterprise_inventory_wfa_rule_update', { 'id': entity.id }) : path('marelloenterprise_inventory_wfa_rule_create')  %}

{% block pageHeader %}
    {% if entity.id %}
        {% set breadcrumbs = {
        'entity':      entity,
        'indexPath':   path('marelloenterprise_inventory_wfa_rule_index'),
        'indexLabel': 'marelloenterprise.inventory.wfarule.entity_short_plural_label'|trans,
        'entityTitle': entity.rule.name|slice(0, 50)
        } %}
        {{ parent() }}
    {% else %}
        {% set breadcrumbs = {
            'indexLabel': 'Create',
            'entityTitle': 'marelloenterprise.inventory.wfarule.entity_short_label'|trans,
            'indexPath': path('marelloenterprise_inventory_wfa_rule_create')
        } %}
        {% set title = 'oro.ui.create_entity'|trans({'%entityName%': 'marelloenterprise.inventory.wfarule.entity_short_label'|trans}) %}
        {% include 'OroUIBundle::page_title_block.html.twig' with { title: title } %}
    {% endif %}
{% endblock pageHeader %}

{% block navButtons %}
    {{ UI.cancelButton(path('marelloenterprise_inventory_wfa_rule_index')) }}
    {% if entity.id and is_granted('marelloenterprise_inventory_wfa_rule_update') or is_granted('marelloenterprise_inventory_wfa_rule_create') %}
        {% set html = '' %}
        {% if is_granted('marelloenterprise_inventory_wfa_rule_view') %}
            {% set html = UI.saveAndCloseButton({
                'route': 'marelloenterprise_inventory_wfa_rule_view',
                'params': {'id': '$id'}
            }) %}
        {% endif %}
        {% set html = html ~ UI.saveAndStayButton({
            'route': 'marelloenterprise_inventory_wfa_rule_update',
            'params': {'id': '$id'}
        }) %}

        {{ UI.dropdownSaveButton({'html': html}) }}
    {% endif %}
{% endblock navButtons %}

{% block content_data %}
    {% set id = 'marello-wfa-rule-update' %}

    {% set dataBlocks = [
        {
            'title': 'marelloenterprise.inventory.sections.general'|trans,
            'class': 'active',
            'subblocks': [
                {
                    'data': [
                        form_row(form.rule.enabled),
                        form_row(form.rule.name),
                        form_row(form.rule.sortOrder),
                        form_row(form.rule.stopProcessing),
                        form_row(form.strategy),
                    ]
                },
            ]
        }
    ] %}

    {% set data = {
        'formErrors': form_errors(form),
        'dataBlocks': dataBlocks
    } %}

    {{ parent() }}
{% endblock %}
