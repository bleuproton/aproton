{% if value > 0 %}
    {% set textColor = 'text-success' %}
    {% set caret = 'up' %}
{% elseif value < 0 %}
    {% set textColor = 'text-danger' %}
    {% set caret = 'down' %}
    {% set value = value %}
{% else %}
    {% set caret = 'right' %}
{% endif %}
<span class="{{ textColor|default('') }}">
    <i class="fa fa-caret-{{ caret }}"></i> {{ value }}
</span>
