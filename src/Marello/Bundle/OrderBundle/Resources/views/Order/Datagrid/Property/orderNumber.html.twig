{% import '@OroUI/macros.html.twig' as UI %}
{% set label = record.getValue('orderNumber') %}
{% set orderId = record.getValue('order.id') %}
{% if orderId is null %}
    {% set orderId = record.getValue('id') %}
{% endif %}

{% if is_granted('marello_order_order_view') %}
    {% set result = UI.renderUrl(path('marello_order_order_view', {'id': orderId}), label) %}
{% else %}
    {% set result = label|escape %}
{% endif %}

{{ result }}