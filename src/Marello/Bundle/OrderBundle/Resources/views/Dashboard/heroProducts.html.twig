{% extends 'OroDashboardBundle:Dashboard:widget.html.twig' %}

{% set widgetType = 'quick-launchpad' %}

{% block content %}
    {% if items|length %}
        {% for itemName, item in items %}
            <div class="widget-item hero-product-widget-item">
                {% if item.value|length %}
                    {% include widgetDataItems[itemName].template with {item: item}%}
                {% else %}
                    <div class="container-fluid">
                        <div class="clearfix no-data">
                            <span>{{ 'marello.order.dashboard.statistics.no_data'|trans }}</span>
                        </div>
                    </div>
                {% endif %}
            </div>
            {% if not loop.last and loop.index % 3 == 0 %}
            <div class="separator"> &nbsp; </div>
            {% endif %}
        {% endfor %}
    {% else %}
        <div class="container-fluid">
            <div class="clearfix no-data">
                <span>{{ 'marello.order.dashboard.hero_products.no_available_metrics'|trans }}</span>
            </div>
        </div>
    {% endif %}
{% endblock %}
