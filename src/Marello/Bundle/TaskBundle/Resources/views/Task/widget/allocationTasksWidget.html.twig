{% if tasks|length > 0 %}
    {% for task in tasks %}
        <div class="task-widget-row {{ task.dueDateExpired ? 'task-expired' : '' }} {{ loop.first ? 'first' : '' }} {{ loop.last ? 'last' : '' }}"
            data-url="{{ path("oro_task_view", {'id':task.id}) }}">
            <span class="task-subject">{{ task.subject }}</span>
            {% if oro_config_value('oro_form.wysiwyg_enabled') %}
                {% set description = task.description|oro_html_sanitize %}
            {%  else %}
                {% set data = task.description|striptags|nl2br %}
            {% endif %}
            <span class="task-description">{{ description|raw }}</span>
            <span class="task-date-time">{{ task.dueDate|oro_format_datetime }}</span>
        </div>
    {% endfor %}
{% else %}
    <p class="no_tasks">
        {{ "oro.task.assigned_tasks_widget.no_task_exist"|trans }}
    </p>
{% endif %}
